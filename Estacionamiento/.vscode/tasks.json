{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build all files in folder",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/Archivo.cpp",
                "${workspaceFolder}/src/Auto.cpp",
                "${workspaceFolder}/src/Celda.cpp",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/Menu.cpp",
                "${workspaceFolder}/src/Parqueadero.cpp",
                "${workspaceFolder}/src/Persona.cpp",
                "${workspaceFolder}/src/Registro.cpp",
                "${workspaceFolder}/src/Validation.cpp",
                "-o",
                "${workspaceFolder}/output/ejecutable.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: g++"
        }
    ]
}
